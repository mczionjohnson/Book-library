<%- include('../partials/header3.ejs') %>

<h2 class="page-header"> <%= author.name %> </h2>
<!-- author is a data/var provided from route -->

<div class="btn-row">
    <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>

    <!-- inluding a partial -->
    <%- include('../partials/deleteForm', {url : `/authors/${author.id}` }) %>
</div>

<% if (booksByAuthor.length > 0) { %>
    <h2 class="page-header">Books By Author</h2>
    <div>
        <% booksByAuthor.forEach(book => { %>
            <a href="/books/<%= book.id %>">
                <img height="150" width="100" src="<%= book.coverImagePath %>">
                <!--book.coverImagePath is a virtual path from the model  -->
            </a>
        <% }) %>
    </div>
<% } %>  
<!-- bookByAuthor is a (looped) data/var provided from route/controller -->
